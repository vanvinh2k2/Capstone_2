<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/user"
                            app:civ_border_color="@color/main"
                            app:civ_border_width="@dimen/_1sdp" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/fullname"
                                android:layout_width="wrap_content"
                                android:text="Nguyen Van An"
                                android:textStyle="bold"
                                android:textColor="#474646"
                                android:textSize="@dimen/_14ssp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:background="@drawable/edit_frame"
                                android:id="@+id/change_profile"
                                android:src="@drawable/user2"
                                android:padding="@dimen/_3sdp"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"/>

                        <TextView
                            android:layout_gravity="center"
                            android:text="Change profile"
                            android:textSize="@dimen/_11sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/change_password"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:background="@drawable/edit_frame"
                                android:src="@drawable/protect"
                                android:padding="@dimen/_3sdp"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"/>
                            <TextView
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_width="wrap_content"
                                android:text="Reset password"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="@dimen/_11ssp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:background="@drawable/edit_frame"
                                android:id="@+id/logout"
                                android:src="@drawable/logout"
                                android:padding="@dimen/_3sdp"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"/>
                        <TextView
                            android:text="Logout"
                            android:textSize="@dimen/_11sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/re_main"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/key"
                            android:background="@drawable/edit_contact"
                            android:padding="@dimen/_6sdp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"/>
                        <LinearLayout
                            android:paddingLeft="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:text="User name"
                                android:gravity="left"
                                android:textColor="#474646"
                                android:textSize="@dimen/_13ssp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/username"
                                android:layout_width="match_parent"
                                android:text="vinhngo24"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13ssp"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/re_main"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/gmail"
                            android:background="@drawable/edit_contact"
                            android:padding="@dimen/_6sdp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"/>
                        <LinearLayout
                            android:paddingLeft="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:text="Email"
                                android:gravity="left"
                                android:textColor="#474646"
                                android:textSize="@dimen/_13ssp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/email"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:text="nguyen@gmail.com"
                                android:gravity="left"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13ssp"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/re_main"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/phone_48"
                            android:background="@drawable/edit_contact"
                            android:padding="@dimen/_6sdp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"/>

                        <LinearLayout
                            android:paddingLeft="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:text="Phone"
                            android:gravity="left"
                            android:textColor="#474646"
                            android:textSize="@dimen/_13ssp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/phone"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:text="Not have"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:layout_height="wrap_content"/>
                            <View
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/re_main"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>

                    </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/location"
                            android:background="@drawable/edit_contact"
                            android:padding="@dimen/_6sdp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"/>
                        <LinearLayout
                            android:paddingLeft="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:text="Address"
                            android:gravity="left"
                            android:textColor="#474646"
                            android:textSize="@dimen/_13ssp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/address"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:text="Hội An, Quảng Nam"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:layout_height="wrap_content"/>
                            <View
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/re_main"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>

                    </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/provider"
                            android:background="@drawable/edit_contact"
                            android:padding="@dimen/_6sdp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"/>
                        <LinearLayout
                        android:paddingLeft="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:text="Provider"
                            android:gravity="left"
                            android:textColor="#474646"
                            android:textSize="@dimen/_13ssp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/provider"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:text="Google"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:layout_height="wrap_content"/>
                            <View
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/re_main"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                    </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/date"
                            android:background="@drawable/edit_contact"
                            android:padding="@dimen/_6sdp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"/>
                        <LinearLayout
                        android:paddingLeft="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:text="Date joined"
                            android:gravity="left"
                            android:textColor="#474646"
                            android:textSize="@dimen/_13ssp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/date_joined"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:text="20/10/2020"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>