<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DetailResActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:titleTextColor="@color/white"
        android:background="@color/main"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="MissingConstraints">
        <TextView
            android:text="Detail restaurant"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="#C5C5C5"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textStyle="bold"
                android:text="King Grap"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/round_star"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="3.5 Rating"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0 Evaluate"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/num_dish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0 Dishes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Liked: "
                    android:textStyle=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/like"
                    android:text="400"
                    android:textSize="@dimen/_13ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/love"
                    android:src="@drawable/love"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
                <ImageView
                    android:id="@+id/un_love"
                    android:src="@drawable/unlove"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Open: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/open"
                    android:text="07:00 - 22:00"
                    android:textSize="@dimen/_13ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Address: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/address"
                    android:text="Hòa An, Cẩm Lệ, Đà Nẵng"
                    android:textSize="@dimen/_13ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Phone: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/phone"
                    android:text="0776991460"
                    android:textSize="@dimen/_13ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:text="Follow Us: "
                    android:layout_gravity="center"
                    android:textSize="@dimen/_13ssp"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/facebook"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"/>
                    <ImageView
                        android:src="@drawable/instagram"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"/>
                    <ImageView
                        android:src="@drawable/twitter"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:text="Support: "
                    android:textSize="@dimen/_13ssp"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/chat"
                    android:src="@drawable/message"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Description:"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/descript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:maxLines="5"
                android:text="I. Reservation: Consulting - Reservation\n

- Please make a reservation at least 60 minutes in advance for the best service\n

- Your reservation will be held for a maximum of 10 minutes\n

- The restaurant only accepts table reservations for 2 guests or more\n

II. Complimentary incentives: A promotion program is being built"
                android:textColor="#656565"
                android:textSize="@dimen/_13ssp" />
            <TextView
                android:id="@+id/read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Read more" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:textStyle="bold"
                android:text="Speciality dishes"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_product"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="left"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/main"
                android:text="Continute order"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>