<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.SearchAIFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230sdp">
                <ImageView
                    android:id="@+id/image_search"
                    android:background="#FBEDED"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_230sdp"
                    android:layout_below="@+id/mota"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_15sdp"/>
                <ImageView
                    android:id="@+id/note"
                    android:layout_gravity="center"
                    android:src="@drawable/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/camera"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:src="@drawable/camera_60" />
                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/colection"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/folder_60" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_below="@id/camera"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/address"
                    android:background="@drawable/edit_input"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/_13ssp"
                    android:layout_height="@dimen/_35sdp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/confirm"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/main"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title"
                    android:text="Searching with result: "
                    android:textSize="@dimen/_13ssp"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/result"
                    android:text="ok luon"
                    android:textSize="@dimen/_13ssp"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_res"
                android:visibility="gone"
                android:padding="@dimen/_5sdp"
                app:spanCount="2"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/not_found"
                android:src="@drawable/not_found"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="The restaurant ordered recently"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_res_current"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical"
                app:spanCount="2"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>